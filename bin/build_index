#!/usr/bin/env ruby

require 'find'
require 'data_mapper'
require 'thyme/photo'

DataMapper::Logger.new(STDOUT, :debug)
DataMapper.setup(:default, "sqlite://#{File.expand_path('./index.db')}")
DataMapper.auto_migrate!

Find.find('/home/agorf/Desktop/').each do |filename|
  if File.file?(filename) && File.extname(filename) == '.JPG'
    Thyme::Photo.create_from_file(filename)
  end
end
