#!/usr/bin/env ruby

require 'find'
require 'data_mapper'
require 'thyme/db'
require 'thyme/photo'

LIBRARY_PATH='/home/agorf/Desktop/'

DataMapper.auto_migrate!

Find.find(LIBRARY_PATH).each do |filename|
  if File.file?(filename) && File.extname(filename) == '.JPG'
    Thyme::Photo.create_from_file(filename)
  end
end
